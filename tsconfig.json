{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/components/layouts/*"],
      "@styles/*": ["src/styles/*"]
    }
  }
}